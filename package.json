{
  "name": "tty-gomoku",
  "version": "1.0.0",
  "description": "",
  "main": "./out/src/main/main.cjs",
  "type": "module",
  "scripts": {
    "build:main": "vite build --config vite.main.config.ts",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "start": "npm run build && electron .",
    "dev:renderer": "vite",
    "dev": "concurrently -k \"cross-env NODE_NO_WARNINGS=1 vite --logLevel error\" \"wait-on http://localhost:5175 && cross-env NODE_NO_WARNINGS=1 VITE_DEV_SERVER_URL=http://localhost:5175 electron .\"",
    "pack:win": "npm run build && electron-builder --win",
    "pack:nsis": "npm run build && electron-builder --win nsis",
    "pack:msi": "npm run build && electron-builder --win msi",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf ./out"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@heroui/theme": "^2.4.25",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "cheerio": "^1.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^37.2.0",
    "electron-builder": "^26.4.0",
    "lucide-react": "^0.562.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^6.0.0",
    "vite-plugin-inspect": "^11.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@heroui/react": "^2.8.7",
    "framer-motion": "^12.27.5",
    "lowdb": "^7.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@heroui/shared-utils",
      "electron",
      "esbuild"
    ]
  },
  "build": {
    "appId": "com.tty.gomoku",
    "productName": "TTY Gomoku",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "out/src/main/main.cjs"
    },
    "win": {
      "icon": "build/icons/ttygomoku.ico",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "mac": {
      "icon": "build/icons/ttygomoku.icns"
    },
    "linux": {
      "icon": "build/icons/ttygomoku.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TTY Gomoku",
      "installerIcon": "build/icons/ttygomoku-installer.ico",
      "uninstallerIcon": "build/icons/ttygomoku-installer.ico",
      "uninstallDisplayName": "TTY Gomoku"
    },
    "msi": {
      "perMachine": false
    }
  }
}
